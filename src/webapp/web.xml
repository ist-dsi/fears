<?xml version="1.0" encoding="UTF-8"?> 
<web-app> 
  <filter>
    <filter-name>TxFilter</filter-name>
    <filter-class>eu.ist.fears.server.filters.TxFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>TxFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet> 
    <servlet-name>FearsService</servlet-name> 
    <servlet-class>
      eu.ist.fears.server.FearsServiceImpl
    </servlet-class> 
    <load-on-startup>1</load-on-startup>
  </servlet> 
  <servlet-mapping> 
    <servlet-name>FearsService</servlet-name> 
    <url-pattern>/service</url-pattern> 
  </servlet-mapping> 
</web-app>
